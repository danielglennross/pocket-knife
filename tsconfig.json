{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "watch": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
    "removeComments": true,
    "lib": ["es6", "es2017"],
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
	  "baseUrl": ".",
	  "paths": {
      "*" : ["types/*"]
    }
  }
}